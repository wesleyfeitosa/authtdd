{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                     
    "outDir": "./dist",                        
    "rootDir": "./src",          
    "baseUrl": "./src",         
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    },    
    "allowJs": true,
    "strict": true,                           
    "strictPropertyInitialization": false,  
    "esModuleInterop": true,                  
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "forceConsistentCasingInFileNames": true  
  },
  "exclude": ["./coverage", "./jest.config.js", "./ormconfig.js", "./prettier.config.js", "jest.setup.ts"]
}
